        <script src="https://use.fontawesome.com/f90313f33f.js"></script>
    </head>
    <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"></span><i class="fa fa-plane"></i> TravelDen</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/campgrounds"><i class="fa fa-globe"></i> Discover</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if(!currentUser) { %>
            	<li><a href="/register"><i class="fa fa-user-plus"></i> Sign up</a></li>
              <li><a href="/login"><i class="fa fa-sign-in"></i> Login</a></li>
            <% } else { %> 
              <li style="position:relative; top:-4px;"><a href="/users/<%= currentUser.id %>"><img class="img-circle" width="48" height="35" src="<%= currentUser.picture %>"> <%= currentUser.username %></a></li>
              <li><a href="/logout"><i class="fa fa-power-off"></i> Logout</a></li>
            <% } %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
 </nav>
 <div class="container" id="message">
  <% if(error && error.length > 0) { %>
     
      <div class="alert alert-danger alert-dismissable fade in" role="alert"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong><%= error %></strong>
      </div>
    <% } %> 
    <% if(success && success.length > 0) { %>
       
        <div class="alert alert-success alert-dismissable fade in" role="alert"><a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= success %></strong>
        </div>
        </div>
    <% } %>
 </div> 
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    
 