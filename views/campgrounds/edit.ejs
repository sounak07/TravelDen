<% include ../partials/header %>

<div class="container ui middle aligned center aligned grid">
    <div class="page-header">
       <h1>Edit <%= campground.name %></h1>
    </div>
    

    <div class="row">
        
                <div class="col-sm-5">
                
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input type="text"  name="name" class="form-control" value="<%= campground.name %>">
                        </div>
                        <div class="form-group">
                            <input type="number"  name="price" class="form-control"  value="<%= campground.price %>" min="0.01" step="0.01" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" id="search_term" class="form-control" value="<%= campground.address %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="image" class="form-control" value="<%= campground.image %>">
                        </div>
                        <div class="form-group">
                            <textarea id="textarea" type="text" name="description" class="form-control"><%= campground.description %></textarea>
                        </div>
                        <button type="submit" class="ui fluid large blue submit inverted button">Submit</button>
                        <br>
                        <a href="/campgrounds">Go Back</a>
                    </form>
                </div>
                
        </div> 
        
        
    </div>
    <br><br>
<% include ../partials/placeapi %>
<% include ../partials/footer %>
