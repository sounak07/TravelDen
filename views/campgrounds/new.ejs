<% include ../partials/header %>

<div class="container ui middle aligned center aligned grid">
    <div class="page-header">
       <h1>Create A New Destination</h1>
    </div>
    
    <div class="row">
            <div class="col-md-5">
                
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input type="text"  name="name" class="form-control"  placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input type="number"  name="price" class="form-control"  placeholder="Estimated Cost (in $)" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="search_term" type="text" size="50" name="address" placeholder="Location" required>
                        </div>
                        <div class="form-group">
                            <textarea id="textarea" name="description" class="form-control"   placeholder="Tell Us Something!"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="image" class="form-control"   placeholder="Image URL" id="url_text">
                        </div>
                        <div class="form-group">
                            <button class="ui button" type="button" id="upload_widget_opener">Upload with Widget</button>
                        </div>
                        <button type="submit" class="ui fluid large blue submit inverted button">Submit</button>
                        <br>
                        <a href="/campgrounds">Go Back</a>
                    </form>
                </div>
                
        </div> 
        
        
    </div>
<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script>
    document.getElementById("upload_widget_opener").addEventListener("click", function() {

        cloudinary.openUploadWidget({ cloud_name: 'sounak', upload_preset: 'ky7dbhru'},
                function(error, result) {
                    console.log(error, result)
                    // Push URL into text input
                    document.getElementById('url_text').value = result[0].url;
                });

    }, false);
</script>
